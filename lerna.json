{
    "version": "0.1.2",
    "packages": [
        "elements/*",
        "packages/*",
        "screens/*"
    ],
    "command": {
        "publish": {
            "allowBranch": [
                "master",
                "develop"
            ]
        }
    },
    "bootstrap": {
        "npmClientArgs": [
            "--no-package-lock"
        ]
    },
    "publishConfig": {
        "access": "public"
    }
}
